<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/preview_top_margin"
    android:layout_marginBottom="@dimen/preview_top_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/item_image"
        android:layout_marginStart="@dimen/span_view_text_margin"
        android:id="@+id/item_info">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/span_view_text_margin"
            android:maxLines="2"
            android:id="@+id/item_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/span_view_text_margin"
            android:layout_marginBottom="@dimen/span_view_text_margin"
            android:maxLines="3"
            android:id="@+id/item_text"/>
    </LinearLayout>
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_width="@dimen/preview_image_size"
        android:layout_height="@dimen/preview_image_size"
        android:layout_margin="@dimen/preview_image_margin"
        android:id="@+id/item_image"/>
</RelativeLayout>