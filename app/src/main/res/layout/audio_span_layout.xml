<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/span_view_height"
    android:orientation="horizontal"
    android:background="?attr/colorPrimary">
    <ImageView
        android:layout_width="@dimen/span_view_image_dimen"
        android:layout_height="@dimen/span_view_image_dimen"
        android:layout_marginTop="@dimen/span_view_image_height_margin"
        android:layout_marginBottom="@dimen/span_view_image_height_margin"
        android:background="@drawable/ic_play_circle_outline"
        android:id="@+id/play_audio"/>
    <LinearLayout
        android:layout_width="@dimen/span_view_text_width"
        android:layout_height="@dimen/span_view_height"
        android:orientation="vertical">
        <TextView
            android:layout_width="@dimen/span_view_text_width"
            android:layout_height="@dimen/span_view_text_height"
            android:padding="@dimen/text_padding"
            android:layout_marginTop="@dimen/span_view_text_margin"
            android:layout_marginBottom="@dimen/span_view_text_margin"
            android:hint="@string/title_hint"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/audio_title"/>
        <TextView
            android:layout_width="@dimen/span_view_text_width"
            android:layout_height="@dimen/span_view_text_height"
            android:padding="@dimen/text_padding"
            android:layout_marginTop="@dimen/span_view_text_margin"
            android:layout_marginBottom="@dimen/span_view_text_margin"
            android:hint="@string/title_hint"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/audio_time"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/span_view_image_dimen"
        android:layout_height="@dimen/span_view_image_dimen"
        android:layout_marginTop="@dimen/span_view_image_height_margin"
        android:layout_marginBottom="@dimen/span_view_image_height_margin"
        android:background="@drawable/ic_more_vert"/>
</LinearLayout>