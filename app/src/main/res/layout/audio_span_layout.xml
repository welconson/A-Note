<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/span_view_height"
    android:orientation="horizontal"
    android:background="@color/primaryGrey">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="11dp"
        android:src="@drawable/ic_audiotrack"
        />
    <LinearLayout
        android:layout_width="@dimen/span_view_text_width"
        android:layout_height="@dimen/span_view_height"
        android:orientation="vertical">
        <TextView
            android:layout_width="@dimen/span_view_text_width"
            android:layout_height="@dimen/span_view_text_height"
            android:padding="@dimen/text_padding"
            android:layout_marginTop="@dimen/span_view_text_margin"
            android:layout_marginBottom="@dimen/span_view_text_margin"
            android:hint="@string/title_hint"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/resource_name"/>
        <TextView
            android:layout_width="@dimen/span_view_text_width"
            android:layout_height="@dimen/span_view_text_height"
            android:padding="@dimen/text_padding"
            android:layout_marginTop="@dimen/span_view_text_margin"
            android:layout_marginBottom="@dimen/span_view_text_margin"
            android:hint="@string/title_hint"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/duration"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/open_button"
        android:layout_width="@dimen/span_view_image_dimen"
        android:layout_height="@dimen/span_view_image_dimen"
        android:layout_marginBottom="@dimen/span_view_image_height_margin"
        android:layout_marginTop="@dimen/span_view_image_height_margin"
        android:background="@drawable/ic_play_circle_outline"/>
    <ImageView
        android:layout_width="@dimen/span_view_image_dimen"
        android:layout_height="@dimen/span_view_image_dimen"
        android:layout_marginTop="@dimen/span_view_image_height_margin"
        android:layout_marginBottom="@dimen/span_view_image_height_margin"
        android:background="@drawable/ic_more_vert"/>
</LinearLayout>